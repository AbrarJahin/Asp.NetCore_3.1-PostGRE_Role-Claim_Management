@using StartupProject_Asp.NetCore_PostGRE.Data.Enums
<header>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index" data-toggle="tooltip" title="ASP.Net Core with PostGRE - Startup Project">
                <img class="logo horizontal-logo" src="~/img/svg/logo.svg" alt="forecastr logo">
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ml-auto">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownLeaveApplication" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                My Leave Application
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownLeaveApplication">
                                <a class="dropdown-item" asp-area="" asp-controller="LeaveApplications" asp-action="Index">My Previous Leave Applications</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="LeaveApplications" asp-action="Create">Apply For a new Leave</a>
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Super-Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownSuperAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Super Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownSuperAdmin">
                                <a class="dropdown-item" asp-area="" asp-controller="RoleManager" asp-action="Index">Role Manage</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="UserRoles" asp-action="Index">User Roles</a>
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Normal-User"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownCheckLeaveApplications" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Check Leave Applications
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownCheckLeaveApplications">
                                <a class="dropdown-item" href="#">Apply For New One</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">See Previous Application Status</a>
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAdmin" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownAdmin">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    }
                    @if (User.IsInRole("Auditor"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownAuditor" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Auditor
                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownAuditor">
                                <a class="dropdown-item" href="#">Action</a>
                                <a class="dropdown-item" href="#">Another action</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="#">Something else here</a>
                            </div>
                        </li>
                    }
                    <partial name="_LoginPartial" />
                </ul>
            </div>
        </div>
    </nav>
</header>